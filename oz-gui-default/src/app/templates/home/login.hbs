{{page-title (t 'login.title')}}

{{!-- TODO: i18n? --}}
<div class="login-elements">
  <div class="container">
    <div class="row row-centered">
      <div class="col-xs-12 text-center zone">
        <div class="row">
          <div class="col-xs-5 col-xs-offset-1 col-sm-3 col-sm-offset-3 col-md-offset-1 col-md-5 zone-image">
          </div>
          <div class="col-xs-6 col-sm-6 col-md-3 zone-label">
            <div class="zone-company-name">
              {{#if model.zoneName}}
                {{model.zoneName}}
              {{else}}
                {{t 'login.unknownZoneName'}}
              {{/if}}
            </div>
            {{#if model.brandSubtitle}}
              <div class="zone-zone">
                {{model.brandSubtitle}}
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>

  {{login-box
    authenticationErrorReason=authenticationErrorReason
    authenticationErrorState=authenticationErrorState
    loginNotification=model.loginNotification
    testMode=testMode
  }}
</div>

<div class="login-service-version">{{t "login.version"}} {{model.serviceVersion}}</div>
