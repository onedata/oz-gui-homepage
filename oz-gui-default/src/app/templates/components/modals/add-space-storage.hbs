{{#bs-modal open=open body=false footer=false header=false
    id=modalId
    openAction="open"
    keyboard=true
    autoClose=true
    backdropClose=true
    closeButton=false
    size="lg"
    class="panel-onezone-modal"
  }}
  {{#bs-modal-header class="panel-heading"}}
     {{t "components.modals.addSpaceStorage.title"}} <span class="special-name">{{space.name}}</span>
   {{/bs-modal-header}}
  {{#bs-modal-body class="panel-body"}}
    <div class="row">
      {{#bs-tab fade=false}}
        {{#bs-tab-pane
          title=(t "components.modals.addSpaceStorage.requestSupport.tabName")
        }}
          {{modals/add-space-storage/request-support
            copySuccess=(action "copySuccess")
            copyError=(action "copyError")
            tokenProxy=supportTokenProxy
            getToken=(action "getNewSupportToken")
          }}
        {{/bs-tab-pane}}
        {{#bs-tab-pane
          title=(t "components.modals.addSpaceStorage.deployProvider.tabName")
        }}
          {{modals/add-space-storage/deploy-provider
            copySuccess=(action "copySuccess")
            copyError=(action "copyError")
            tokenProxy=supportTokenProxy
          }}
        {{/bs-tab-pane}}
        {{#bs-tab-pane
          title=(t "components.modals.addSpaceStorage.exposeData.tabName")
        }}
          {{modals/add-space-storage/expose-data
            copySuccess=(action "copySuccess")
            copyError=(action "copyError")
            tokenProxy=supportTokenProxy
          }}
        {{/bs-tab-pane}}
      {{/bs-tab}}
    </div>
  {{/bs-modal-body}}
{{/bs-modal}}
