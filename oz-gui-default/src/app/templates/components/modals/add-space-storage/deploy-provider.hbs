<div class="row">
  <div class="col-xs-7">
    <p>
      {{t "components.modals.addSpaceStorage.deployProvider.desc1"}}
    </p>
    <p>
      {{t "components.modals.addSpaceStorage.tabsCommon.descCommand"}}
    </p>
  </div>
  <div class="col-xs-1"></div>
  <img class="col-xs-4" src="assets/images/onezone/add-storage-deploy.svg">
</div>
<div class="row">
  <div class="col-xs-12">
    <h2>{{t "components.modals.addSpaceStorage.tabsCommon.command"}}</h2>
    {{#promise-proxy-container proxy=tokenProxy}}
      <textarea class="token-input form-control" rows="5"  readonly>{{commandProxy.content}}</textarea>
    {{/promise-proxy-container}}
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <a class="clickable" {{action "getToken"}}>
      {{t "components.modals.addSpaceStorage.tabsCommon.generateToken"}}
    </a>
    {{!-- TODO handle copy success/failure with changing clipboard icon for a while--}}
    {{#copy-button tagName="div" success="copySuccess" error="copyError"
      class="btn btn-primary clickable pull-right"
      clipboardTarget=_clipboardTarget}}
      {{one-icon tagName="div" icon="clipboard-copy"}} Copy
    {{/copy-button}}
  </div>
</div>
