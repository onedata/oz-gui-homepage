<div class="row">
  <div class="col-xs-6">
    <p>
      {{t "components.modals.addSpaceStorage.requestSupport.desc1"}}
    </p>
    <p>
      {{t "components.modals.addSpaceStorage.requestSupport.desc2"}}
    </p>
    <p>
      {{t "components.modals.addSpaceStorage.requestSupport.desc3"}}
    </p>
  </div>
  <img class="col-xs-6" src="assets/images/onezone/add-storage-request.svg">
</div>
<div class="row">
  <div class="col-xs-12">
    <h2>{{t "components.modals.addSpaceStorage.tabsCommon.token"}}</h2>
    {{!-- TODO loading state --}}
    {{#promise-proxy-container proxy=tokenProxy}}
      <textarea class="token-input form-control" rows="4" readonly>{{tokenProxy.content}}</textarea>
    {{/promise-proxy-container}}
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <a class="clickable" {{action "getToken"}}>
      {{t "components.modals.addSpaceStorage.tabsCommon.generateToken"}}
    </a>
    {{!-- TODO handle copy success/failure with changing clipboard icon for a while--}}
    {{#copy-button tagName="div" success="copySuccess" error="copyError"
      class="btn btn-primary clickable pull-right"
      clipboardTarget=_clipboardTarget}}
      {{one-icon tagName="div" icon="clipboard-copy"}} Copy
    {{/copy-button}}
  </div>
</div>
