{{#bs-modal open=open body=false footer=false
    id=modalId
    title=(t 'components.modals.joinSpace.title')
    openAction="open"
    keyboard=(not isDisabled)
    autoClose=(not isDisabled)
    backdropClose=(not isDisabled)
    closeButton=false
    closedAction="closed"
  }}

  {{#bs-modal-body}}
    {{modals/elements/alert-panel message=message messagePrefix=messagePrefix
      messageType=messageType}}

      <div class="control-label">
        {{t 'components.modals.joinSpace.label'}}
      </div>

      {{input type="text" value=token autofocus=true class="form-control"
        enter=(if isSubmitEnabled (action "submit"))}}
  {{/bs-modal-body}}
  {{#bs-modal-footer as |footer|}}
    {{#spin-button-onedata buttonType="submit"
      action=(if isSubmitEnabled (action "submit"))
      class="btn btn-primary no-outline" spinnerColor="#fff"
      inFlight=isWorking disabled=(not isSubmitEnabled)}}
      {{t "common.modal.join"}}
    {{/spin-button-onedata}}
    {{#bs-button action=(action "close" target=footer) type="default" disabled=isWorking
      class="no-outline"}}
      {{t "common.modal.cancel"}}
    {{/bs-button}}
  {{/bs-modal-footer}}

{{/bs-modal}}
