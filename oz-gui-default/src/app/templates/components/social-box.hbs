<a {{action 'clicked'}} class="login-icon-box v-center-parent auth-icon {{type}}">
  {{#if active}}
    <div class="v-center-child">
      {{spin-spinner scale=spinnerScale lines=12 length=20 width=10}}
    </div>
  {{else}}
    {{#if (eq iconType "oneicon")}}
      {{one-icon tagName="div" icon=_iconName class="v-center-child"}}
    {{else if (eq iconType "text")}}
      {{yield}}
    {{else}}
      <div class="social-icon-image" style={{socialIconStyle}}></div>
    {{/if}}
  {{/if}}
</a>
{{#if tip}}
  {{bs-tooltip title=tip}}
{{/if}}

