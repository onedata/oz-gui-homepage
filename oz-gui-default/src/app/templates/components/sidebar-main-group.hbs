{{!-- add class "collapse in" to uncollapse by default --}}

<div class="accordion-group main-accordion-group">
  <div class="accordion-heading main-accordion-heading">
    <a class="accordion-toggle main-accordion-toggle" data-toggle="collapse"
      href={{concat "#collapse-" collapseId}}>
      <h1>{{title}}</h1>
      <div class="arrow-down"></div>
    </a>
  </div>
  <div id={{concat "collapse-" collapseId}} class="accordion-body main-accordion-body collapse">
    <div class="accordion-inner main-accordion-inner">
      {{yield}}
    </div>
  </div>
</div>
