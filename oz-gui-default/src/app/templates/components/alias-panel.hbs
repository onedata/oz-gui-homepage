<div class="accordion secondary-accordion alias-accordion">
  {{!-- faking the accordion group... this should be separate class --}}
  <div class="accordion-group secondary-accordion-group alias-accordion-group">
    <div class="accordion-heading secondary-accordion-heading alias-accordion-heading">
      <div class="accordion-toggle secondary-accordion-toggle alias-accordion-toggle create-new {{toggleClass}}"
        {{action 'startEditAlias'}}>

        <div class="secondary-item-container alias-edit-container">

          {{#if isLoading}}
            <div class="secondary-item-element spinner-container spinner-32">
              {{spin-spinner scale=0.16 lines=12 length=20 width=10}}
            </div>
          {{else}}
            <div class="secondary-item-element secondary-icon">
              {{one-icon tagName="div" icon='user'}}
            </div>
          {{/if}}
          
          <div class="secondary-item-element secondary-header alias-text readonly">
            {{#if aliasEditing}}
              {{input enter='endEditAlias' value=aliasTextEdit autofocus="autofocus"
                disabled=isLoading class="alias-edit"}}
            {{else}}
              {{#if isLoading}}
                {{t 'common.loadingNamed' name=(t 'onezone.aliasPanel.userAlias')}}
              {{else}}
                {{#if correctAlias}}
                  {{#truncated-string}}
                  {{aliasText}}
                  {{/truncated-string}}
                {{else}}
                  <em>{{t 'onezone.aliasPanel.noAlias'}}</em>
                {{/if}}
              {{/if}}
            {{/if}}
          </div>

          {{#if aliasEditing}}
            <div class="secondary-item-element secondary-icon" {{action 'endEditAlias' aliasTextEdit bubbles=false }}>
              {{one-icon tagName="div" icon='checkbox-check'}}
            </div>
            <div class="secondary-item-element secondary-icon" {{action 'cancelEditAlias' bubbles=false }} >
              {{one-icon tagName="div" icon='checkbox-x'}}
            </div>
          {{else}}
            <div class="secondary-item-element secondary-icon">
              {{one-icon tagName="div" icon='rename'}}
            </div>
          {{/if}}
        </div>

        </div>
    </div>
  </div>
</div>
