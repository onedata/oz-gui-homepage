<div class="accordion-group secondary-accordion-group providers-accordion-group">
  <div class="item">
    <div class="accordion-heading secondary-accordion-heading providers-accordion-heading">
      <div class="accordion-toggle secondary-accordion-toggle providers-accordion-toggle">
        <div class="secondary-item-container">

          <div class="secondary-item-element go-to-provider" {{action "goToProvider"}}>
            <div class="secondary-icon provider-icon">
              {{one-icon tagName="div" icon=iconName class=iconColorClass}}
            </div>
            {{#if isPending}}
              <div class="secondary-item-element provider-pending">
                <div class="spinner-container spinner-32">
                  {{spin-spinner scale=0.16 lines=12 length=20 width=10 top=14}}
                </div>
              </div>
            {{/if}}
            {{#truncated-string class="one-label secondary-item-element secondary-header provider-header"}}
              {{name-conflict item=provider}}
            {{/truncated-string}}
          </div>
          <div class="secondary-item-element star-toggle" {{action "toggleDefault"}}>
            {{#if provider.isDefault}}
              {{one-icon tagName="div" icon="home"}}
            {{else}}
              {{!-- class name is star-empty because of historical reasons... --}}
              <div class="star-empty">
                {{one-icon tagName="div" icon="home-outline"}}
              </div>
            {{/if}}
          </div>
          <div class="secondary-item-element spaces-count" data-toggle="collapse" href="#{{collapseId}}">
            <div class="icon">
              {{one-icon tagName="div" icon="space"}}
            </div>
            <div class="one-label">
              {{spaces.length}}
            </div>
          </div>

        </div>
      </div>
    </div>
    <div id="{{collapseId}}" class="accordion-body secondary-accordion-body providers-accordion-body sidebar-list collapse">
      <div class="accordion-inner">
        <ul class="tertiary-list">
          {{#each spacesSorted as |s|}}
            {{providers-accordion-item-space space=s providerId=provider.id}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
