<div class="secondary-accordion tokens-container">
  {{#if isLoading}}
    {{!-- TODO: do not use accordion.. divs --}}
    <div class="accordion-group secondary-accordion-group tokens-accordion-group">
      <div class="accordion-heading secondary-accordion-heading tokens-accordion-heading">
        <div clas="accordion-toggle secondary-accordion-toggle tokens-accordion-toggle hover-parent non-hoverable">
          <div class="token-icon secondary-icon">
            <div class="spinner-container">
              {{spin-spinner scale=0.16 lines=12 length=20 width=10 top=14}}
            </div>
          </div>
          <div class="token-header" id="{{inputContainerId}}">
            {{t 'common.loadingNamed' name=(t 'onezone.tokensAccordion.tokensList')}}
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div class="sidebar-row sidebar-row-text-info">{{t 'onezone.tokensAccordion.info'}}</div>

    {{#each tokenModels as |tm|}}
      {{tokens-list-item token=tm.token active=tm.active deactivateAllTokens="deactivateAllTokens"}}
    {{/each}}
  {{/if}}

  <div class="accordion-group secondary-accordion-group tokens-accordion-group">
    <div class="accordion-heading secondary-accordion-heading tokens-accordion-heading">
      <div class="onezone-sidebar-secondary-item accordion-toggle secondary-accordion-toggle create-new first-create-new clickable"
        {{action 'createNewToken'}}>

        <div class="secondary-item-container">

          <div class="secondary-item-element add-item-icon token-icon icon">
            {{one-icon tagName="div" icon='add'}}
          </div>
          <div class="secondary-item-element token-header one-label">
            {{t 'onezone.tokensAccordion.createNewToken'}}
          </div>

        </div>
      </div>
    </div>
  </div>

</div>
