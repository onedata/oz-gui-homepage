<div class="row buttons-list">
  <div class="col-xs-12 col-centered">
    <div class="row row-centered">
      {{#if isLoading}}

        <div class="spinner-container">
          {{spin-spinner scale=1 lines=12 length=20 width=10}}
        </div>

      {{else}}

        {{#if errorMessage}}
          {{t "components.socialBoxList.fetchProvidersFailed"}}: {{errorMessage}}
        {{else}}
        <div>
          {{#each supportedAuthorizers as |authorizer|}}
            {{social-box
              authId=authorizer.id
              iconPath=authorizer.iconPath
              iconBackgroundColor=authorizer.iconBackgroundColor
              tip=(concat (t "login.loginUsing") authorizer.displayName)
              action=(action (if (eq authorizer.id "onepanel") "usernameBoxClick" "authenticate"))
            }}
          {{/each}}
          {{#if showMoreButton}}
            {{social-box 
              authId="more"
              action=(action "showMoreClick")
              tip=(t "login.showMore")
            }}
          {{/if}}
        </div>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>
