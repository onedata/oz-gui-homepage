<div class="row row-centered">
  <div class="{{containerClass}}">
    <div class="row row-centered">
      {{#if isLoading}}

      <div class="spinner-container">
        {{spin-spinner scale=1 lines=12 length=20 width=10}}
      </div>

      {{else}}

        {{#if errorMessage}}
          {{t 'components.socialBoxList.fetchProvidersFailed'}}: {{errorMessage}}
        {{else}}
        <div>
          {{#each supportedAuthorizers as |authorizerName|}}
            <div class="{{boxContainerClasses}}">
              {{!-- basicAuth is a special case --}}
              {{#if (eq authorizerName 'basicAuth')}}
                {{social-box type='username' action='showLoginForm' iconName='key'}}
              {{else}}
                {{!-- rhea is a special case with full size logo --}}
                {{social-box 
                  type=authorizerName
                  fullSize=(eq authorizerName "rhea")
                  action='authenticate'
                }}
              {{/if}}
            </div>
          {{/each}}
        </div>
        {{/if}}

      {{modals/login-form modalId="login-form" open=loginFormOpened}}


      {{/if}}
    </div>
  </div>
</div>
