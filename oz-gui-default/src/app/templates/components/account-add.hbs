<div class="dropdown side-dropdown">
  <div href="#" class="dropdown-toggle side-dropdown-toggle full-width clickable"
    data-toggle="dropdown" role="button" aria-haspopup="true"
    aria-expanded="false">

    <div class="secondary-item-container">
    
      {{#if isLoading}}
        <div class="secondary-item-element spinner-container spinner-32 icon">
          {{spin-spinner scale=0.2 lines=12 length=20 width=10}}
        </div>
      {{else}}
        <div class="secondary-item-element account-icon account-add-icon sidebar-icon-container icon">
          {{one-icon tagName="div" icon="add"}}
        </div>
      {{/if}}
      <div class="secondary-item-element account-label connect-new one-label one-label-large">
        {{t "onezone.accountAdd.connectNewAccount"}}
      </div>
      
    </div>
    
  </div>
  <div class="dropdown-menu dropdown-menu-right dropdown-menu-middle-arrow floater account-add-popup">
    {{#each shownAuthorizers as |authProvider|}}
      {{account-item
        authId=authProvider.id
        iconPath=authProvider.iconPath
        iconBackgroundColor=authProvider.iconBackgroundColor
        label=(concat (concat (t "onezone.accountAdd.connectBy") " ") authProvider.displayName)
        mode="connect"
        action=(action "connectNewAccount")
      }}
    {{/each}}
  </div>
</div>
