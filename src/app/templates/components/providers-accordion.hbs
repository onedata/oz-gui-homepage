<div class="accordion secondary-accordion providers-accordion">
    {{#if isLoading}}
      {{!-- TODO: fix fake accordion group --}}
      <div class="accordion-group secondary-accordion-group providers-accordion-group">
        <div class="accordion-heading secondary-accordion-heading providers-accordion-heading">
          <div class="accordion-toggle secondary-accordion-toggle providers-accordion-toggle">
            <div class="secondary-icon spinner-container">
              {{spin-spinner scale=0.16 lines=12 length=20 width=10 top=14}}
            </div>
            <div class="secondary-header provider-header stretch-hack">
              {{!-- TODO: translate --}}
              Loading providers list...
            </div>
          </div>
        </div>
      </div>
    {{else}}
      {{!-- TODO: implement search --}}
      {{!-- <div class="sidebar-row">
        <div class="input-group c-search">
          <input type="text" class="form-control" id="providers-list-search">
          <span class="input-group-btn">
            <!-- TODO: btn-search class -->
            <button class="btn btn-search" type="button">
              {{one-icon icon="search"}}
            </button>
          </span>
        </div>
      </div> --}}

      {{if noProviders}}
        <div class="sidebar-row space-add-text-row">
          {{t 'onezone.providersAccordion.noProviders'}}
        </div>
      {{else}}
        <div class="sidebar-row space-add-text-row">
          {{t 'onezone.providersAccordion.chooseProvider'}}
        </div>

        <!-- TODO: class list-group -->
        <div class="list-group" id="providers-list">
          {{#each providersSorted as |p|}}
            {{providers-accordion-item provider=p selectProvider='selectProvider'}}
          {{/each}}
        </div>
      {{/if}}
    {{/if}}
</div>
