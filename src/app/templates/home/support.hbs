<div class="container-index container-support">
  <div class="row-index row-support-area">
    <div class="container">
      <div class="col-xs-12">
        <div class="row">
          <h1>{{t 'support.supportAreaTitle'}}</h1>
        </div>

        <div class="row row-support">
          <div class="image-box bug-report"></div>
          <div class="support-header">
            <h2>{{t 'support.bugReport.title'}}</h2>
          </div>
          <div class="support-content">
            {{t 'support.bugReport.text'}}:
            <a href="https://github.com/onedata/onedata/issues">
              {{t 'support.bugReport.reportProblemLink'}}
            </a>
          </div>
        </div>

        <div class="row row-support">
          <div class="image-box dedicated-support"></div>
          <div class="support-header">
            <h2>{{t 'support.dedicatedSupport.title'}}</h2>
          </div>
          <div class="support-content">
            {{t 'support.dedicatedSupport.introMayApply'}}:
            <ul>
              <li>{{t 'support.dedicatedSupport.bulletConfiguring'}},</li>
              <li>{{t 'support.dedicatedSupport.bulletImplementing'}},</li>
              <li>{{t 'support.dedicatedSupport.bulletAdopting'}},</li>
              <li>{{t 'support.dedicatedSupport.bulletSolving'}}.</li>
            </ul>
            <a href="mailto:info@onedata.org">{{t 'support.dedicatedSupport.contactUs'}}</a> {{t 'support.dedicatedSupport.contactForMore'}}.
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row-index row-know-more">
    <div class="container">
      <h1>{{t 'index.knowMore.title'}}</h1>
      <div class="container-fluid login-buttons-container">
        <div class="row row-centered">
          <div class="col-xs-6 text-right">
            {{social-box
              authId="github"
              iconPath="assets/images/auth-providers/github.svg"
              iconBackgroundColor="#1E2325"
              link="https://github.com/onedata"
            }}
          </div>
          <div class="col-xs-6 text-left">
            {{social-box
              authId="facebook"
              iconPath="assets/images/auth-providers/facebook.svg"
              iconBackgroundColor="#5B87C5"
              link="https://www.facebook.com/onedataorg"
            }}
          </div>
        </div>
      </div>
      <p>
        {{t 'index.knowMore.privacy'}}
        <span class="dot-separator"></span>
        {{t 'index.knowMore.tos'}}
        <span class="dot-separator"></span>
        {{t 'index.knowMore.copyright'}}
      </p>
    </div>
  </div>
</div>
